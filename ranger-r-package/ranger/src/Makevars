## Use c++11
CXX_STD = CXX11
PKG_CPPFLAGS = -DR_BUILD

$(error Compiler: $(CC))

## Check for gcc >= 4.7
GCC_VER := $(shell gcc -dumpversion)
GCC_OK := $(shell echo `$(GCC_VER) | cut -f1-2 -d.` \>= 4.7 | bc )
ifneq ($(GCC_OK),1)
$(error Error: gcc >= 4.7 required, version $(GCC_VER) installed. Please update gcc.)
endif